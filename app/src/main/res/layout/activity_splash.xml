<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".activity.SplashActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@string/description"
        android:paddingLeft="@dimen/splashActivity_padding_brand"
        android:paddingRight="@dimen/splashActivity_padding_brand"
        android:src="@drawable/brand" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/linearLayoutSlidingPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewPlane"
                android:layout_width="@dimen/splashActivity_height_plane_size"
                android:layout_height="@dimen/splashActivity_height_plane_size"
                android:layout_gravity="center"
                android:contentDescription="@string/description"
                android:scaleType="fitCenter"
                android:src="@drawable/plane" />

            <ImageView
                android:id="@+id/imageViewRunway"
                android:layout_width="match_parent"
                android:layout_height="@dimen/splashActivity_height_plane_runway"
                android:contentDescription="@string/description"
                android:scaleType="fitXY"
                android:src="@drawable/menu_gradient" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>