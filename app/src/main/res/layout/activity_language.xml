<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_language"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.LanguageActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/splashActivity_padding_brand"
        android:gravity="center"
        android:text="Choose Language"
        android:textSize="@dimen/textview_heading_size" />

    <Button
        android:id="@+id/buttonEnglish"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@color/colorRipplePlayer1"
        android:gravity="center"
        android:text="English"
        android:textColor="@color/colorWhite"
        android:textSize="25sp" />


    <Button
        android:id="@+id/buttonHindi"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/button_padding_horizontal"
        android:background="@color/colorRipplePlayer1"
        android:gravity="center"
        android:text="हिन्दी "
        android:textColor="@color/colorWhite"
        android:textSize="32sp" />
</LinearLayout>
